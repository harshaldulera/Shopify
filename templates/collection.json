{
  "sections": {
    "main-collection-banner": {
      "type": "main-collection-banner",
      "custom_css": [
        "h1 {font-family: Quirk; font-size: 60px;}"
      ],
      "settings": {
        "show_collection_description": true,
        "show_collection_image": false,
        "color_scheme": "background-1"
      }
    },
    "main-product-grid": {
      "type": "main-collection-product-grid",
      "custom_css": [
        "h3 {font-family: Druk; font-weight: bold; font-size: 18px;}"
      ],
      "settings": {
        "products_per_page": 20,
        "columns_desktop": 4,
        "image_ratio": "adapt",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "enable_quick_add": false,
        "enable_filtering": false,
        "filter_type": "horizontal",
        "enable_sorting": true,
        "columns_mobile": "2",
        "padding_top": 0,
        "padding_bottom": 64
      }
    }
  },
  "order": [
    "main-collection-banner",
    "main-product-grid"
  ]
}
