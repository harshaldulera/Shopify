<style>
    html {
        -webkit-font-smoothing: antialiased!important;
        -moz-osx-font-smoothing: grayscale!important;
        -ms-font-smoothing: antialiased!important;
    }
    body {  
        font-family: 'Open Sans', sans-serif;
        font-size: 16px;
        color: #555555;
    }
    .md-stepper-horizontal {
        display: table;
        width: 100%;
        margin: 0 auto;
        background-color: #FFFFFF;
        box-shadow: 0 3px 8px -6px rgba(0, 0, 0, .50);
    }
    .md-stepper-horizontal .md-step {
        display: table-cell;
        position: relative;
        padding: 24px;
        text-align: center;
    }
    .md-stepper-horizontal .md-step:hover,
    .md-stepper-horizontal .md-step:active {
        background-color: rgba(0, 0, 0, 0.04);
    }
    .md-stepper-horizontal .md-step:active {
        border-radius: 15% / 75%;
    }
    .md-stepper-horizontal .md-step:first-child:active {
        border-top-left-radius: 0;
        border-bottom-left-radius: 0;
    }
    .md-stepper-horizontal .md-step:last-child:active {
        border-top-right-radius: 0;
        border-bottom-right-radius: 0;
    }
    .md-stepper-horizontal .md-step:hover .md-step-circle {
        background-color: #910F3F;
    }
    .md-stepper-horizontal .md-step .md-step-circle {
        width: 100px;
        height: 30px;
        margin: 0 auto;
        background-color: #910F3F;
        border-radius: 50%;
        text-align: center;
        line-height: 30px;
        font-size: 16px;
        font-weight: 600;
        color: #FFFFFF;
    }
    .md-stepper-horizontal .md-step .md-step-title {
        margin-top: 16px;
        font-size: 16px;
        font-weight: 600;
        color: #555555;
    }
    .md-stepper-horizontal .md-step.active .md-step-title {
        font-weight: 600;
        color: #555555;
    }
    .md-stepper-horizontal .md-step:not(:last-child)::after {
        content: "";
        position: absolute;
        top: 32%;
        left: 100%;
        transform: translateX(-50%);
        height: 3px;
        width: 10px;
        background-color: #910F3F;
    }

    /* Media query for screens smaller than 768px */
    @media (max-width: 768px) {
        .md-stepper-horizontal .md-step:not(:last-child)::after {
            width: 200px; /* Adjust the width for smaller screens */
        }
    }

/* Media query for screens smaller than 480px */
    @media (max-width: 480px) {
        .md-stepper-horizontal .md-step:not(:last-child)::after {
            width: 100px; /* Adjust the width for even smaller screens */
        }
    }
    .md-stepper-horizontal .md-step a {
        text-decoration: none;
        color: inherit;
    }
</style>

<div class="md-stepper-horizontal orange">
    {% for step in (1..4) %}
    <div class="md-step{% if step <= 3 %} active{% endif %}">
        <a href="/pages/faq">
            <div class="md-step-circle"><span>{{ step }}</span></div>
            <div class="md-step-title">
                {% case step %}
                {% when 1 %}
                    Open
                {% when 2 %}
                    Cook
                {% when 3 %}
                    Serve
                {% when 4 %}
                    Enjoy
                {% endcase %}
            </div>
        </a>
    </div>
    {% endfor %}
</div>

{% schema %}
{
  "name": "Stepper Example",
  "settings": [],
  "blocks": [
    {
      "type": "stepper",
      "name": "Stepper",
      "settings": [
        {
          "type": "color",
          "label": "Stepper Circle Color",
          "id": "circle_color",
          "default": "#910F3F"
        },
        {
          "type": "color",
          "label": "Step Title Color",
          "id": "title_color",
          "default": "#555555"
        }
      ]
    }
  ]
}
{% endschema %}